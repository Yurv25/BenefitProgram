<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.student.benefitprogram.NCBS"
    android:background="@drawable/cra2"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter income (Maximum $57000)"
        android:id="@+id/textView6"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button4"
        android:layout_marginEnd="60dp"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fincome"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Child/Children (1 to 5)"
        android:id="@+id/textView7"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/fincome"
        android:layout_alignStart="@+id/fincome"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button4"
        android:onClick="calculation"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/children"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/children"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="37dp"
        android:background="#ffffffff"
        android:layout_toStartOf="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/viewfam"
        android:layout_marginTop="33dp"
        android:textColor="#ffff0e0e"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/viewamt"
        android:layout_alignTop="@+id/viewfam"
        android:textColor="#ffffffff"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Income"
        android:id="@+id/textView20"
        android:layout_marginTop="24dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/viewfam"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Benefit Base on Children"
        android:id="@+id/textView21"
        android:layout_alignTop="@+id/textView20"
        android:layout_alignStart="@+id/viewamt"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/crawebsite"
        android:id="@+id/textView31"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff0405" />
</RelativeLayout>
